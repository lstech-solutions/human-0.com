{
  "name": "@human-0/i18n",
  "version": "1.5.14",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./hooks": {
      "types": "./dist/hooks.d.ts",
      "default": "./dist/hooks.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "locize:download": "locize download --project-id $LOCIZE_PROJECT_ID --path ./locales",
    "locize:upload": "locize upload --project-id $LOCIZE_PROJECT_ID --path ./locales"
  },
  "dependencies": {
    "i18next": "^24.2.3",
    "react-i18next": "^15.4.1",
    "expo-localization": "~17.0.1",
    "i18next-http-backend": "^3.0.2"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-native": ">=0.73"
  },
  "devDependencies": {
    "typescript": "~5.9.2",
    "locize-cli": "^10.3.2",
    "@types/react": "^18.3.0"
  }
}